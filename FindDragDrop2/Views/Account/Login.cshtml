@model LoginVM

<h1>Find, Drag & Drop</h1>
<h2 id="name">Choose name and password to start game</h2>
<form asp-controller="Account" asp-action="Login" style="text-align:center;">
    <input asp-for="Name" placeholder="Write your name here" />
    <span asp-validation-for="Name"></span>
    <br />
    <input asp-for="Password" placeholder="Write your password here" />
    <span asp-validation-for="Password"></span>
    <br />
    <br />

    <input type="submit" value="Play" />
</form>

<form asp-controller="Account" asp-action="Create" style="text-align:center;">
    <input asp-for="Name" placeholder="Write your name here" />
    <span asp-validation-for="Name"></span>
    <br />
    <input asp-for="Password" placeholder="Write your password here" />
    <span asp-validation-for="Password"></span>
    <br />
    <br />

    <input type="submit" value="Play" />
</form>

